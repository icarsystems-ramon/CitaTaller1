<?xml version="1.0" encoding="utf-8"?>
<configuration>

  <!-- Path API donde localizar la WebAPI... -->
  <location path="api">
    <system.web>
      <httpHandlers>
        <add path="*" type="ServiceStack.HttpHandlerFactory, ServiceStack" verb="*"/>
      </httpHandlers>
    </system.web>

    <!-- Required for IIS 7.0 -->
    <system.webServer>
      <modules runAllManagedModulesForAllRequests="true"/>
      <validation validateIntegratedModeConfiguration="false"/>
      <handlers>
        <add allowPathInfo="true" name="ServiceStack.Factory" path="*" preCondition="integratedMode" resourceType="Unspecified" type="ServiceStack.HttpHandlerFactory, ServiceStack" verb="*"/>
      </handlers>
    </system.webServer>
  </location>

  <!-- Required for MONO -->
  <system.web>
    <httpHandlers>
      <add path="api*" type="ServiceStack.HttpHandlerFactory, ServiceStack" verb="*"/>
    </httpHandlers>
  </system.web>
  
  <!-- Required for IIS7 -->
  <system.webServer>
    <!-- ServiceStack: Required -->
    <validation validateIntegratedModeConfiguration="false"/>
  </system.webServer>
  
  <!-- Conexiones a la base de datos -->
  <connectionStrings>
    <add 
      name="CitaTallerAzure"
      connectionString="Server=tcp:kmrsha0ybe.database.windows.net,1433;Database=citataller;User ID=webapi@kmrsha0ybe;Password=Bbb12345;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;" 
     />
  </connectionStrings>

</configuration>