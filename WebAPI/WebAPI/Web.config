<?xml version="1.0" encoding="utf-8"?>
<configuration>

  <!-- Path API donde localizar la WebAPI... -->
  <location path="api">
    <system.web>
      <httpHandlers>
        <add path="*" type="ServiceStack.HttpHandlerFactory, ServiceStack" verb="*"/>
      </httpHandlers>
    </system.web>

    <!-- Required for IIS 7.0 -->
    <system.webServer>
      <modules runAllManagedModulesForAllRequests="true"/>
      <validation validateIntegratedModeConfiguration="false"/>
      <handlers>
        <add allowPathInfo="true" name="ServiceStack.Factory" path="*" preCondition="integratedMode" resourceType="Unspecified" type="ServiceStack.HttpHandlerFactory, ServiceStack" verb="*"/>
      </handlers>
    </system.webServer>
  </location>


  <!-- Conexiones a la base de datos -->
  <connectionStrings>
    <add connectionString="Server=tcp:kmrsha0ybe.database.windows.net,1433;Database=citataller;User ID=webapi@kmrsha0ybe;Password=Bbb12345;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;" name="CitaTallerAzure"/>
  </connectionStrings>

</configuration>