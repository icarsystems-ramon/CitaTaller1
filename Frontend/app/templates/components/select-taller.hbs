{{#paper-list}}
{{#paper-subheader class="md-no-sticky"}}Escoja el taller de su preferencia:{{/paper-subheader}}
    {{#each model as |taller|}}
        {{#paper-button icon-button=true param=taller action="toggleGeo" }}
        {{paper-icon icon="place"}}
        {{/paper-button}}
        {{#paper-item class="md-3-line" param=taller action="chooseTaller"}}           
            <div class="md-list-item-text">
                {{taller.descripcion}}
                <p>{{taller.direccion}}</p>          
            </div>
            {{paper-radio value=taller class="md-secondary" selected=taller.choosed changed="chooseTaller" }}
        {{/paper-item}}
    {{/each}}
{{/paper-list}}

